<header 
    id="Landing-header"
    class=" py-6 px-10 flex items-center fixed top-0 w-full justify-between z-40"
> 
    <div class="flex flex-grow basis-0">
        <img class="h-10" src="logo.PNG" alt="logo">
    </div>

    <nav>
        <ul class=" text-current flex  [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2 [&>li>a]:transition-color [&>li>a]:duration-500 [&>li>a]:font-medium ">
            <li><a href="#">Vehicles</a></li>
            <li><a href="#">Energy</a></li>
            <li><a href="#">Charging</a></li>
            <li><a href="#">Discover</a></li>
        </ul>
    </nav>

    <nav class="text-current flex flex-grow justify-end basis-0">
        <ul class="flex text-sm [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2 [&>li>a]:transition-color [&>li>a]:duration-250 [&>li>a]:font-medium">
            <li><a href="#">Find</a></li>
            <li><a href="#">Lenguage</a></li>
            <li><a href="#">Sign in</a></li>
        </ul>
    </nav>
    <div id="menu-backdrop"
        class="absolute bg-black/5 backdrop-blur-lg rounded translate-x-[var(--left)] translate-y-[var(--top)] left-0 top-0 w-[var(--width)] h-[var(--height)] transition-all duration-500 ease-in-out opacity-0 -z-10"
    />
</header>

<script >
    const ListItem = document.querySelectorAll('#Landing-header li')
    const menuBackdrop = document.querySelector('#menu-backdrop') as HTMLElement

    ListItem.forEach((item) => {
        item.addEventListener('mouseenter', () => {
            const { left, top, width, height } = item.getBoundingClientRect()
            menuBackdrop.style.setProperty('--left', `${left}px`)
            menuBackdrop.style.setProperty('--top', `${top}px`)
            menuBackdrop.style.setProperty('--width', `${width}px`)
            menuBackdrop.style.setProperty('--height', `${height}px`)
            menuBackdrop.style.opacity ='1'
            menuBackdrop.style.visibility = 'visible'
        })
        item.addEventListener('mouseleave', () => {
            menuBackdrop.style.opacity ='0'
            menuBackdrop.style.visibility = 'hidden'
        })
    })
</script>

<script>
    const headerEl = document.querySelector('#Landing-header') as HTMLElement
    const observerOption = {
        root: null, // default is viewport
        rootMargin: '0px', // is the element visible
        threshold: 0.9 // % of the element visible
    }
    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
           const { isIntersecting} = entry 
            if(isIntersecting) {
                const color = entry.target.getAttribute('data-header-color')
                headerEl.style.color = color
            }
        })
    },observerOption)
    const sectionElements = document.querySelectorAll('.landing-section')
    sectionElements.forEach(section => observer.observe(section))
</script>